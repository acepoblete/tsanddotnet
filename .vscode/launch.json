{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/react-client",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/src/*"
            }
        },
        {
            "name": "Launch .NET",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": ".net build",
            "program": "${workspaceFolder}/dotnet-api/bin/Debug/net10.0/FunctionExecutor.dll",
            "args": [],
            "cwd": "${workspaceFolder}/dotnet-api",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/dotnet-api/Views"
            }
        },
    ],
    "compounds": [
        {
            "name": "Debug",
            "configurations": [
                "Launch .NET",
                "Launch Chrome"
            ],
            "preLaunchTask": "vite dev",
            "presentation": {
                "group": "group 4: Web",
                "order": 1
            },
            "stopAll": true
        },
    ]
}
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "yarn: dev - react-client",
			"type": "npm",
			"script": "dev",
			"path": "react-client",
			"group": "build",
			"problemMatcher": [],
			"detail": "vite",
			"options": {
				"cwd": "${workspaceFolder}/react-client"
			},
		},
		{
			"label": "vite dev",
			"type": "shell",
			"command": "yarn dev",
			"options": {
				"cwd": "${workspaceFolder}/react-client"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "Local:\\s+https?://localhost:\\d+"
				}
			},
			"presentation": {
				"reveal": "silent",
				"panel": "dedicated"
			}
		},
		{
			"label": ".net build",
			"command": "dotnet",
			"type": "process",
			"group": "build",
			"args": [
				"build",
				"${workspaceFolder}/dotnet-api/FunctionExecutor.csproj"
			],
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$msCompile"
		},
	]
}